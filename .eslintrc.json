{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true,
    "generators": true,
    "experimentalObjectRestSpread": true
  },
  "rules": {
    "semi": 2,
    "no-console": 1,
    "no-unused-vars": 1,
    "prefer-spread": 1,
    "prefer-arrow-callback": 2,
    "prefer-template": 2,
    "eqeqeq": 1,
    "no-debugger": 1,
    "no-case-declarations": 1
  }
}
