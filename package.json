      "url": "https://github.com/mariotacke"
  }],
  "license": "ISC",
  "dependencies": {
    "co-fs-extra": "^1.1.0",
    "mime-types": "^2.1.7",
    "moment-timezone": "^0.5.5",
    "validator": "^5.7.0"
  },
  "devDependencies": {
    "co": "^4.6.0",
    "istanbul-harmony": "^0.3.16",
    "koa": "^1.0.0",
    "koa-better-body": "^1.0.17",
    "koa-qs": "^2.0.0",
