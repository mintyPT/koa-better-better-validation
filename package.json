{
  "name": "koa-better-validation",
  "version": "1.3.2",
  "description": "Koa Better Validation is a more up-to-date 'fork' of koa-validation. You can validate request params, querystring values, bodies, and even files.",
  "main": "lib/Validate.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --require should --reporter spec",
    "test-win": "mocha --require should --reporter spec",
    "test-cov": "NODE_ENV=test node ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --require should",
    "test-travis": "NODE_ENV=test node ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha --report lcovonly -- --require should",
    "lint": "eslint . --ext .js"
  },
  "keywords": [
    "koa",
    "middleware",
    "validation",
    "filters",
    "validator",
    "koa-better-validation",
    "koa validation",
    "file validation"
  ],
  "repository": "technicallyjosh/koa-better-validation",
  "author": {
    "name": "Josh Newman",
    "url": "https://github.com/technicallyjosh"
  },
  "contributors": [
    {
      "name": "Mario Tacke",
      "url": "https://github.com/mariotacke"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "co-fs-extra": "^1.1.0",
    "mime-types": "^2.1.7",
    "moment-timezone": "^0.4.1",
    "validator": "^4.0.5"
  },
  "devDependencies": {
    "co": "^4.6.0",
    "cross-env": "^2.0.1",
    "eslint": "^3.5.0",
    "istanbul-harmony": "^0.3.16",
    "koa": "^1.0.0",
    "koa-better-body": "^1.0.17",
    "koa-qs": "^2.0.0",
    "koa-router": "^5.2.1",
    "mocha": "^2.3.3",
    "should": "^7.1.1",
    "supertest": "^1.1.0"
  }
}
